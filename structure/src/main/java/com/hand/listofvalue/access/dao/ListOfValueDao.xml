<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.listofvalue.access.dao.ListOfValueDao">
    <sql id="queryAllSql">
        SELECT
        CODE as code,
        CREATED as created,
        CREATED_BY as createdBy,
        UPDATED as updated,
        UPDATED_BY as updatedBy,
        TYPE as type,
        LANG_ID as langId,
        VAL as val,
        NAME as name,
        PAR_LST_CODE as parLstCode,
        LEVEL as level,
        ACT_FLG as actFlg,
        `DESC` as `desc`
    </sql>
    <sql id="queryALLConditionSql">
        <if test="code!=null and code!=''"> AND CODE=#{code}</if>
        <if test="created!=null and created!=''"> AND CREATED=#{created}</if>
        <if test="createdBy!=null and createdBy!=''"> AND CREATED_BY=#{createdBy}</if>
        <if test="updated!=null and updated!=''"> AND UPDATED=#{updated}</if>
        <if test="updatedBy!=null and updatedBy!=''"> AND UPDATED_BY=#{updatedBy}</if>
        <if test="type!=null and type!=''"> AND TYPE=#{type}</if>
        <if test="langId!=null and langId!=''"> AND LANG_ID=#{langId}</if>
        <if test="val!=null and val!=''"> AND VAL=#{val}</if>
        <if test="name!=null and name!=''"> AND NAME=#{name}</if>
        <if test="parLstCode!=null and parLstCode!=''">AND PAR_LST_CODE=#{parLstCode}</if>
        <if test="level!=null and level!=''"> AND LEVEL=#{level}</if>
        <if test="actFlg!=null and actFlg!=''"> AND ACT_FLG=#{actFlg}</if>
        <if test="desc!=null and desc!=''"> AND `DESC`=#{desc}</if>
    </sql>
    <select id="queryLstOfVaL" parameterType="com.hand.listofvalue.access.vo.ListOfValueVO" resultType="com.hand.listofvalue.access.vo.ListOfValueVO">
        <include refid="queryAllSql"></include>
        FROM
        HC_LST_OF_VAL
        WHERE
        1=1
        <include refid="queryALLConditionSql"></include>
    </select>
    <select id="toUniqueVerify" parameterType="com.hand.listofvalue.access.vo.ListOfValueVO" resultType="int">
        SELECT COUNT(*) FROM HC_LST_OF_VAL WHERE lang_id=#{langId} AND type=#{type} AND (name=#{name} OR val=#{val})
    </select>
    <insert id="insertLstOfVal" parameterType="com.hand.listofvalue.access.vo.ListOfValueVO" useGeneratedKeys="true" keyProperty="code">
        INSERT INTO HC_LST_OF_VAL(CODE,CREATED,CREATED_BY,TYPE,LANG_ID,VAL,NAME,PAR_LST_CODE,LEVEL,ACT_FLG,`DESC`) VALUES (#{code},sysdate(),#{updatedBy},#{type},#{langId},#{val},#{name},#{parLstCode},#{level},#{actFlg},#{desc})
    </insert>
</mapper>